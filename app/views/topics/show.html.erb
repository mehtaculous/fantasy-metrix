<div class="home">
  <div class="row">
    <h1 class="topic"><%= @topic.name %></h1>
    <div class="pull-right">
      <% if policy(@topic).update? %>
        <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'devise btn btn-success' %>
      <% end %>
      <% if policy(Post.new).create? %>
        <%= link_to "New Post", new_topic_post_path(@topic), class: 'devise btn btn-success' %>
      <% end %>
    </div><br>
    <% @posts.each do |post| %>
      <h3><%= link_to post.title, [@topic, post], class: 'post-links' %></h3>
      <small class="author">By <%= post.user.username %></small>
    <% end %><br><br>
    <div class="text-center center-block pagination">
      <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div><br><br>