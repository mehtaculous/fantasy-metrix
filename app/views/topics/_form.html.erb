<%= form_for topic do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
  </div>
  <div class="form-group">
    <%= f.label :image_path %>
    <%= f.text_field :image_path, class: 'form-control', placeholder: "Enter image path" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'devise btn btn-success' %>
  </div>
<% end %>