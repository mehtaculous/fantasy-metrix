<% @topics.each_slice(3) do |topics| %>
  <div class="row">
    <% topics.each do |topic| %>
      <div class="col-md-4 text-center">
        <h1><%= link_to topic.name, topic, class: 'topic-links' %></h1>
        <%= link_to image_tag(topic.image_path, :width => 170, :height => 190), topic %><br>
      </div>
    <% end %>
  </div><br><br><br>
<% end %>
<div class="text-center"><br>
  <% if policy(Topic.new).create? %>
    <%= link_to "New Topic", new_topic_path, class: 'devise btn btn-success' %>
  <% end %>
</div>