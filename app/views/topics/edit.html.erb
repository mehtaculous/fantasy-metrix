<div class="home">
  <h1>Edit Topic</h1><br>
  <div class="row">
    <div class="col-md-4 text">
      <%= form_for @topic do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'devise btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>