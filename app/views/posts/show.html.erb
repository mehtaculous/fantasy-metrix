<div class="row">
  <div class="col-md-12">
    <h1 class="post"><%= @post.title %></h1>
    <small class="date"><%= @post.user.username %> posted <%= time_ago_in_words(@post.created_at) %></small><br><br>
    <div>
      <% if policy(@post).update? %>
        <%= link_to "Edit Post", edit_topic_post_path(@topic, @post), class: 'edit btn btn-success' %>
      <% end %>
      <% if policy(@post).destroy? %>
        <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %><br><br>
      <% end %>
    </div>
    <p><%= markdown_to_html @post.body %></p><br><br>
  </div>
</div><br><br><br>
<div class="row">
  <div class="col-md-12">
    <h2>Comments</h2>
    <%= render @comments %><br><br>
  </div>
</div>
<div class="row">
  <div class="col-md-7">
    <% if current_user %>
      <h2>New Comment</h2>
      <%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
    <% end %>
  </div>
</div>
