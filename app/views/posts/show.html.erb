<div class="home">
  <div class="row">
    <h1 class="post"><%= @post.title %></h1>
    <div class="pull-right">
      <% if policy(@post).update? %>
        <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'devise btn btn-success' %>
      <% end %>
    </div>
    <small class="author">
      Submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.username %><br><br>
    </small>
    <h4 class="body"><%= markdown_to_html @post.body %></h4><br><br><br>
  </div>
  <div class="col-md-10">
    <h2 class="comments">Comments</h2>
    <%= render @comments %>
  </div>
  <% if current_user %>
    <div class="col-md-7">
      <h4>New Comment</h4>
      <%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
    </div>
  <% end %>
</div>