<div class="row">
  <% @teams.each do |team| %>
    <div class="col-md-8 text-center"><br><br>
      <%= link_to image_tag(team.image_path, :width => 110, :height => 80, :title => "#{team.name}"), team %>
    </div>
  <% end %>
</div><br><br><br> 
<div class="row">
  <div class="col-md-12 text-center">
    <% if policy(Team.new).create? %>
      <%= link_to "New Team", new_team_path, class: 'devise btn btn-success' %>
    <% end %>
  </div>
</div><br><br><br>
