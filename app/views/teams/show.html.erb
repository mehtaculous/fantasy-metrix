<div class="row">
  <div class="col-md-12">
    <h1 class="white text-center"><%= @team.name %></h1><br>
  </div>
  <div class="col-md-12 text-center">
    <% if policy(Player.new).create? %>
      <%= link_to "New Player", new_team_player_path(@team, @player), class: 'edit btn btn-success' %>
    <% end %>
    <% if policy(@team).destroy? %>
      <%= link_to "Delete Team", @team, method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this team?' } %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% @players.each do |player| %>
        <h3><%= link_to image_tag(player.image_path, :width => 150, :height => 150), [@team, player], class: 'player-links' %></h3>
      <% end %>
    </div>
  </div>
</div>