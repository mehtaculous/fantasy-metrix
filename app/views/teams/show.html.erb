<div class="row">
  <div class="col-md-12 text-center">
    <h1 class="team"><%= @team.name %></h1><br>
  </div>
  <div class="col-md-12 text-center">
    <% if policy(Player.new).create? %>
      <%= link_to "New Player", new_player_path(@player), class: 'devise btn btn-success' %>
    <% end %>
    <% if policy(@team).update? %>
      <%= link_to "Edit Team", edit_team_path(@team), class: 'edit btn btn-danger' %>
    <% end %>
    <% if policy(@team).destroy? %>
      <%= link_to "Delete Team", @team, method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this team?' } %>
    <% end %>
  </div>
</div>
<div class="row">
  <% @players.each do |player| %>
    <% if player.quarterback? %>
      <div class="col-md-3 text-center center-block"><br><br>
        <h3><%= link_to image_tag(player.image_path, :width => 150, :height => 150), player %></h3>
        <h3><%= link_to player.name, player, class: 'player-links' %>
      </div>
    <% end %>
  <% end %>
</div>
