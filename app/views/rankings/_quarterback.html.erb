<div class="row">
  <div class="col-md-12">
    <h3>Week 1 - Quarterback Rankings</h3>
    <table id="header" class="table table-bordered grey text-center">
      <tbody>
        <tr>
          <th>Rank</th>
          <th>Player</th>
          <th>Standard</th>
          <th>Half PPR</th>
          <th>Full PPR</th>
        </tr>
        <% @nfl_players.each do |nfl_player| %>
          <tr>
            <% if nfl_player.quarterback? %>
              <td style="width: 100px"></td>
              <td style="text-align:left"><%= link_to nfl_player.name, nfl_player_path(nfl_player), class: 'player-stats' %></td>
              <td style="width: 220px"></td>
              <td style="width: 220px"></td>
              <td style="width: 220px"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>