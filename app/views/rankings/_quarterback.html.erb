<div class="row">
  <div class="col-md-12">
    <h3>Week 1 - Quarterback Rankings</h3>
    <table id="header" class="table table-bordered grey text-center">
      <tbody>
        <tr>
          <th>Rank</th>
          <th>Player</th>
          <th>Standard</th>
          <th>Half PPR</th>
          <th>Full PPR</th>
        </tr>
        <% @players.each do |player| %>
          <tr>
            <% if player.quarterback? %>
              <td style="width: 100px"></td>
              <td align="left"><%= link_to player.name, team_player_path(player.team, player), class: 'player-stats' %></td>
              <td style="width: 210px"></td>
              <td style="width: 210px"></td>
              <td style="width: 210px"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>