<table class="table">
  <tr><td>
  <small class="author">
    <%= comment.user.username %> commented <%= time_ago_in_words(comment.created_at) %> ago
    <% if policy(comment).destroy? %>
      <%= link_to "Delete", [comment.post, comment], method: :delete %>
    <% end %>
  </small>
  <p><%= comment.body %></p>
  </td></tr>
</table>