<%= form_for [nfl_player] do |f| %>
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter player name" %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth, class: 'form-control', placeholder: "Enter age" %>
    </div>
    <div class="form-group">
      <%= f.label :position %>
      <%= f.text_field :position, class: 'form-control', placeholder: "Enter position" %>
    </div>
    <div class="form-group">
      <%= f.label :height %>
      <%= f.text_field :height, class: 'form-control', placeholder: "Enter height" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :weight %>
      <%= f.number_field :weight, class: 'form-control', placeholder: "Enter weight" %>
    </div>
    <div class="form-group">
      <%= f.label :college %>
      <%= f.text_field :college, class: 'form-control', placeholder: "Enter college" %>
    </div>
    <div class="form-group">
      <%= f.label :team %>
      <%= f.select :nfl_team_id, options_for_select(NflTeam.all.map{|s|[s.name, s.id]}), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image_path %>
      <%= f.text_field :image_path, class: 'form-control', placeholder: "Enter image path" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'devise btn btn-success' %>
    </div>
  </div><br><br>
<% end %>