<div class="profile">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
      <h1 class="grey"><%= @nfl_player.name %></h1><br>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row">
    <div class="col-md-4"><br>
      <table id="info" class="table table-bordered table-hover grey">
        <tbody>
          <tr><th style="width: 130px">Age</th><th class="text-center"><%= @nfl_player.age %></th></tr>
          <tr><th style="width: 130px">Height</th><th class="text-center"><%= @nfl_player.height %></th></tr>
          <tr><th style="width: 130px">Weight</th><th class="text-center"><%= @nfl_player.weight %></th></tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 text-center">
      <div class="player"><%= image_tag(@nfl_player.image_path) %></div>
    </div>
    <div class="col-md-4"><br>
      <table class="table table-bordered table-hover grey">
        <tbody>
          <tr><th>College</th><th><%= @nfl_player.college %></th></tr>
          <tr><th>Position</th><th><%= @nfl_player.position %></th></tr>
          <tr><th style="width: 110px">Current Team</th><th><%= @nfl_player.nfl_team.name %></th></tr>
        </tbody>
      </table>
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-center">
      <% if policy(@nfl_player).update? %>
        <%= link_to "Edit Player", edit_nfl_player_path(@nfl_player), class: 'edit btn btn-success' %>
      <% end %>
      <% if policy(@nfl_player).destroy? %>
        <%= link_to "Delete Player", @nfl_player, method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this player?' } %>
      <% end %>
    </div>
  </div><br>
</div><br><br><br>


<% if @nfl_player.quarterback? %>
  <%= render partial: 'career_passing_stat_table', locals: { nfl_player: @nfl_player } %><br><br><br>
  <%= render partial: 'passing_game_log_table', locals: { passing_game_log: @passing_game_log, passing_game_logs: @passing_game_logs } %><br><br><br>
<% end %>


<% if @nfl_player.running_back? %>
  <%= render partial: 'career_rushing_stat_table', locals: { nfl_player: @nfl_player } %><br><br><br>
  <%= render partial: 'rushing_game_log_table', locals: { rushing_game_log: @rushing_game_log, passing_game_logs: @passing_game_logs } %><br><br><br>
<% end %>


<% if @nfl_player.wide_receiver? %>
  <%= render partial: 'career_receiving_stat_table', locals: { nfl_player: @nfl_player } %><br><br><br>
  <%= render partial: 'receiving_game_log_table', locals: { receiving_game_log: @receiving_game_log, receiving_game_logs: @receiving_game_logs } %><br><br><br>
<% end %>


<% if @nfl_player.tight_end? %>
  <%= render partial: 'career_receiving_stat_table', locals: { nfl_player: @nfl_player } %><br><br><br>
  <%= render partial: 'receiving_game_log_table', locals: { receiving_game_log: @receiving_game_log, receiving_game_logs: @receiving_game_logs } %><br><br><br>
<% end %>