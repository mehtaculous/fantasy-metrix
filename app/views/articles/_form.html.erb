<%= form_for article do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 15, class: 'form-control', placeholder: "Enter body" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'devise btn btn-success' %>
  </div>
<% end %>