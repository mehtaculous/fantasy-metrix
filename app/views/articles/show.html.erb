<div class="home">
  <div class="row">
    <h1 class="post"><%= @article.title %></h1>
    <small class="author">
      By <%= @article.user.username %> on
      <%= @article.created_at.time.to_formatted_s(:long) %>
    </small><br><br>
    <div>
      <% if policy(@article).update? %>
        <%= link_to "Edit Article", edit_article_path(@article), class: 'edit btn btn-success' %>
      <% end %>
      <% if policy(@article).destroy? %>
        <%= link_to "Delete Article", @article, method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this article?' } %><br><br>
      <% end %>
    </div>
    <p><%= markdown_to_html @article.body %></p><br><br><br>
  </div>
</div>