<div class="home">
  <div class="row">
    <div class="col-md-12">
      <h1 class="green">Articles</h1><br>
      <p>___________________________________________________________________________________________________________________________________________</p>
    </div>
  </div>
  <div class="row">
    <% @articles.each do |article| %>
      <% if article.image_path? %>
        <div class="col-md-3">
          <%= image_tag(article.image_path, :width => 150, :height => 150) %>
        </div>
      <% end %>
      <div class="col-md-9">
        <h2><%= link_to article.title, article, class: 'article-links' %></h2>
        <small class="author">
          By <%= article.user.username %>
        </small><br><br>
      </div>
      <div class="col-md-12">
        <p>___________________________________________________________________________________________________________________________________________</p>
      </div>
    <% end %>
  </div>
  <h4 class="text-center paginate"><%= will_paginate @articles %></h4>
  <div class="row">
    <div class="text-center">
      <% if policy(Article.new).create? %>
        <%= link_to "New Article", new_article_path, class: 'devise btn btn-success' %>
      <% end %>
    </div>
  </div>
</div><br><br>