<div class="row">
  <div class="col-md-12 text-center">
    <h1 class="green"><%= @player.name %></h1>
    <%= image_tag(@player.image_path) %>
    <h4>Age: <%= @player.age %></h4>
    <h4>College: <%= @player.college %></h4>
    <h4>Draft Pick: <%= @player.draft %></h4><br><br>
  </div>
  <div class="col-md-12 text-center">
    <% if policy(@player).update? %>
      <%= link_to "Edit Player", edit_team_player_path(@team, @player), class: 'edit btn btn-success' %>
    <% end %>
    <% if policy(@player).destroy? %>
      <%= link_to "Delete Player", [@team, @player], method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this player?' } %><br><br>
    <% end %>
  </div>
</div>