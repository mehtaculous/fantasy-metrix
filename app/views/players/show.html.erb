<div class="profile">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
      <h1 class="grey"><%= @player.name %></h1><br>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row">
    <div class="col-md-4"><br>
      <table id="info" class="table table-bordered table-hover grey">
        <tbody>
          <tr><th style="width: 130px">Age</th><th class="text-center"><%= @player.age %></th></tr>
          <tr><th style="width: 130px">Height</th><th class="text-center"><%= @player.height %></th></tr>
          <tr><th style="width: 130px">Weight</th><th class="text-center"><%= @player.weight %></th></tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 text-center">
      <div class="player"><%= image_tag(@player.image_path) %></div>
    </div>
    <div class="col-md-4"><br>
      <table class="table table-bordered table-hover grey">
        <tbody>
          <tr><th>College</th><th><%= @player.college %></th></tr>
          <tr><th>Position</th><th><%= @player.position %></th></tr>
          <tr><th>Current Team</th><th><%= @player.team.name %></th></tr>
        </tbody>
      </table>
    </div>
  </div><br>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-center">
      <% if policy(@player).update? %>
        <%= link_to "Edit Player", edit_team_player_path(@team, @player), class: 'edit btn btn-success' %>
      <% end %>
      <% if policy(@player).destroy? %>
        <%= link_to "Delete Player", [@team, @player], method: :delete, class: 'cancel btn btn-danger', data: { confirm: 'Are you sure you want to delete this player?' } %>
      <% end %>
    </div>
  </div><br>
</div><br><br><br>

<% if @player.position == "Quarterback" %>
  <div class="row">
    <div class="col-md-12">
      <h3>Career Statistics</h3>
      <table id="header" class="table table-bordered table-hover grey text-center">
        <tbody>
          <tr>
            <th colspan="3">Year</th><th colspan="9">Passing</th><th colspan="3">Rushing</th><th colspan="1">Fantasy Points</th>
          </tr>
          <tr>
            <th title="Week">YEAR</th><th title="Team">TEAM</th><th title="Games Played">GP</th><th title="Completions">COMP</th><th title="Passing Attempts">ATT</th><th title="Completion Percentage">COMP %</th><th title="Passing Yards">YARDS</th><th title="Yards Per Attempt">YPA</th><th title="Yards Per Game">YPG</th><th title="300+ Passing Yard Games">300+</th>    <th title="Passing Touchdowns">TD</th><th title="Interceptions">INT</th><th title="Rushing Attempts">ATT</th><th title="Rushing Yards">YARDS</th><th title="Rushing Touchdowns">TD</th><th title="Standard Scoring">STANDARD</th>
          </tr>
          <%= render @player.career_passing_stats %>
        </tbody>
      </table>
    </div>
  </div><br><br><br>
  <div class="row">
    <div class="col-md-12">
      <h3>2015 Game Log</h3>
      <table id="header" class="table table-bordered table-hover grey text-center">
        <tbody>
          <tr>
            <th colspan="3">Game</th><th colspan="7">Passing</th><th colspan="3">Rushing</th><th colspan="1">Fantasy Points</th>
          </tr>
          <tr>
            <th title="Week">WEEK</th><th title="Date">DATE</th><th title="Opponent">OPP</th><th title="Completions">COMP</th><th title="Passing Attempts">ATT</th><th title="Completion Percentage">COMP %</th><th title="Passing Yards">YARDS</th><th title="Yards Per Attempt">YPA</th><th title="Passing Touchdowns">TD</th><th title="Interceptions">INT</th><th title="Rushing Attempts">ATT</th><th title="Rushing Yards">YARDS</th><th title="Rushing Touchdowns">TD</th><th title="Standard Scoring">STANDARD</th>
          </tr>
          <%= render @passing_game_logs %>
        </tbody>
      </table>
    </div>
  </div><br><br>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-center">
      <% if policy(@passing_game_log).create? %>
        <%= link_to "New Passing Game Log", new_player_passing_game_log_path(@player, @passing_game_log), class: 'edit btn btn-success' %>
      <% end %>
    </div>
  </div><br><br><br>
<% end %>


