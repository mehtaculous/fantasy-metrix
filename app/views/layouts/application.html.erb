<!DOCTYPE html>
<html>
<head>
  <title>FantasyMetrix</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <div class="alert alert-success text-center">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif  flash[:error] %>
    <div class="alert alert-danger text-center">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning text-center">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <%= render "layouts/header" %>

  <div class="container">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand">FantasyMetrix</a>
        </div>
        <div>
          <ul class="nav navbar-nav">
            <li><%= link_to "Home", root_path, class: 'nav-links' %></li>
            <li><%= link_to "Articles", articles_path, class: 'nav-links' %></li>
            <li><%= link_to "Rankings", "#", class: 'nav-links' %></li>
            <li><%= link_to "Teams", teams_path, class: 'nav-links' %></li>
            <li><%= link_to "Forums", topics_path, class: 'nav-links' %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if !user_signed_in? %>
              <li><%= link_to " Login", new_user_session_path, class: "glyphicon glyphicon-log-in" %><li>
            <% else %>
              <li><%= link_to " #{current_user.username}", edit_user_registration_path, class: 'glyphicon glyphicon-user' %></li> 
              <li><%= link_to " Logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="home"><br><br>
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">

          <%= yield %>

        </div>
      </div>
    </div>
  </div><br><br><br>

  <%= render "layouts/footer" %>

</body>
</html>
